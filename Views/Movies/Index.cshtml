@model IEnumerable<MVCMovie.Models.Movie>;
@{
    ViewData["Title"] = "Movies List";
}

<h1>Movies List</h1>

<a asp-action="Create">Insert a movie</a>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.ReleaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.Genre)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Movie movie in Model)
    {
        <tr>
            <td>@Html.DisplayFor(item => movie.Title)</td>
            <td>@Html.DisplayFor(item => movie.ReleaseDate)</td>
            <td>@Html.DisplayFor(item => movie.Genre)</td>
            <td>@Html.DisplayFor(item => movie.Price)</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primar">Details</a>
                <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-primary">Delete</a>
            </td>
        </tr>
    }
    <tbody>
</table>