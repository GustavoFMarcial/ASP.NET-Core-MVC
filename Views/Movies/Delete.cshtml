@model MVCMovie.Models.Movie
@{
    ViewData["Title"] = "Delete movie";
}

<h1>Movie Details</h1>

<ul class="list-group col-4">
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">@Html.DisplayNameFor(model => Model.Title)</div>
      @Html.DisplayFor(item => item.Title)
    </div>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">@Html.DisplayNameFor(model => Model.ReleaseDate)</div>
      @Html.DisplayFor(item => item.ReleaseDate)
    </div>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">@Html.DisplayNameFor(model => Model.Genre)</div>
      @Html.DisplayFor(item => item.Genre)
    </div>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">@Html.DisplayNameFor(model => Model.Price)</div>
      @Html.DisplayFor(item => item.Price)
    </div>
  </li>
  <form asp-action="ConfirmDelete" method="post">
    <input asp-for="Id" type="hidden">
    <div class="text-end">
        <a asp-action="Index" class="btn btn-primary mt-4">Back</a>
        <button type="submit" class="btn btn-danger mt-4">Delete</button>
    </div>
  </form>
</ul>